<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MapNavigationRecorder.MainPage"
             BackgroundColor="White">
    <Grid>
        <WebView x:Name="MapWebView" />
        <StackLayout VerticalOptions="End" Padding="12" Spacing="8" BackgroundColor="#80000000">
            <Label x:Name="StatusLabel" Text="Ready" TextColor="White" HorizontalOptions="Center" />
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="8">
                <Button x:Name="RecordButton" Text="Record" Clicked="OnRecordClicked" />
                <Button x:Name="StopButton" Text="Stop" Clicked="OnStopClicked" IsEnabled="False" />
                <Button x:Name="ClearButton" Text="Clear" Clicked="OnClearClicked" />
                <Button x:Name="SavedRoutesButton" Text="Saved Routes" Clicked="OnSavedRoutesClicked"/>

            </StackLayout>
        </StackLayout>
    </Grid>
</ContentPage>